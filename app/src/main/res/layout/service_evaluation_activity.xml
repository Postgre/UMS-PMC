<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="维修服务评价"
        android:textColor="@color/baseColor"
        android:textSize="36sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="120dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="服务态度"
                    android:layout_marginLeft="10dp"
                    android:textSize="26sp"/>

                <com.urovo.ums_pmc.view.RatingBarView
                    android:id="@+id/ratingbarview"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    app:starCount="5"
                    app:starEmpty="@drawable/ic_blank_star"
                    app:starFill="@drawable/ic_red_star"
                    app:starImageSize="28dp"/>

                <TextView
                    android:id="@+id/tv_ratingbar_result"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="26sp"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="专业服务"
                    android:layout_marginLeft="10dp"
                    android:textSize="26sp"/>

                <com.urovo.ums_pmc.view.RatingBarView
                    android:id="@+id/ratingbarview1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    app:starCount="5"
                    app:starEmpty="@drawable/ic_blank_star"
                    app:starFill="@drawable/ic_red_star"
                    app:starImageSize="28dp"/>

                <TextView
                    android:id="@+id/tv_ratingbar_result1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="26sp"
                    android:visibility="invisible"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="准时达到"
                    android:layout_marginLeft="10dp"
                    android:textSize="26sp"/>

                <com.urovo.ums_pmc.view.RatingBarView
                    android:id="@+id/ratingbarview2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:gravity="center_horizontal"
                    app:starCount="5"
                    app:starEmpty="@drawable/ic_blank_star"
                    app:starFill="@drawable/ic_red_star"
                    app:starImageSize="28dp"/>

                <TextView
                    android:id="@+id/tv_ratingbar_result2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="26sp"
                    android:visibility="invisible"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/bt_evaluation_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_selectort"
            android:text="确认"
            android:textColor="@android:color/white"
            android:textSize="28sp"/>

        <Button
            android:id="@+id/bt_evaluation_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_selectort"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="28sp"/>
    </LinearLayout>

</LinearLayout>